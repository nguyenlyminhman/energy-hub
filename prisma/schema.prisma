generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model meter {
  id            Int       @id(map: "meter_pk") @default(autoincrement())
  meter_code    String?   @db.VarChar
  price_plan_id Int?
  created_at    DateTime? @db.Timestamp(6)
  created_by    String?   @db.VarChar
  updated_at    DateTime? @db.Timestamp(6)
  updated_by    String?   @db.VarChar
}

model meter_record {
  id             Int       @id(map: "meter_record_pk") @default(autoincrement())
  recorded_value Int?
  meter_id       Int?
  created_at     DateTime? @db.Timestamp(6)
  created_by     String?   @db.VarChar
  updated_at     DateTime? @db.Timestamp(6)
  updated_by     String?   @db.VarChar
}

model price_plan {
  id         Int       @id(map: "price_plan_pk") @default(autoincrement())
  plan_name  String    @db.VarChar
  rate       Int?
  created_at DateTime? @db.Timestamp(6)
  created_by String?   @db.VarChar
  updated_at DateTime? @db.Timestamp(6)
  updated_by String?   @db.VarChar
}

model supplier {
  id            Int       @id(map: "supplier_pk") @default(autoincrement())
  supplier_name String    @db.VarChar
  created_at    DateTime? @db.Timestamp(6)
  created_by    String?   @db.VarChar
  updated_at    DateTime? @db.Timestamp(6)
  updated_by    String?   @db.VarChar
}

model users {
  username String  @db.VarChar
  password String  @db.VarChar
  fullname String? @db.VarChar
  avatar   String? @db.VarChar
  id       Int     @id(map: "users_pk") @default(autoincrement())
}
